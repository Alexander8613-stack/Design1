<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/element1"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Element 1"
            android:textColor="@color/colorElement1"
            android:background="@color/colorElement1"
            android:clickable="false" />

        <TextView
            android:id="@+id/element2"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:text="Element 2"
            android:textColor="@color/colorElement2"
            android:background="@color/colorElement2"
            android:clickable="false" />

        <TextView
            android:id="@+id/element3"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:text="Element 3"
            android:textColor="@color/colorElement3"
            android:background="@color/colorElement3"
            android:clickable="false" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:text="Click me!" />

    </LinearLayout>

</LinearLayout>

